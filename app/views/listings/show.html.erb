<p id="notice"><%= notice %></p>

<div>
<% if @listing.picture.attached? %>
 <%= image_tag @listing.picture, alt: @listing.title %>
<% else %> 
 <%= image_tag "https://placedog.net/300/?random", alt: @listing.title %>
<% end %> 
</div>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @listing.condition %>
</p>

<p>
  <strong>Price $</strong>
  <%= @listing.price %>
</p>

<% if @listing.sold %>
  <h1>Sold Out!</h1>
<% elsif current_user && current_user.id == @listing.user_id%>
  <p>This item belongs to you, unless you've been mugged...</p>
<% elsif current_user %>    
  <%= button_to "Buy Now!", place_order_path %>
<% else %>  
  <h1>Please Login</h1>
<% end %>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category_id %>
</p>
<!-----------may get an error here later if so remove "current_user &&" bellow.-------------------------------------------->
<% if current_user && current_user.id == @listing.user_id %>
<%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>

<%= link_to 'Back', listings_path %>

